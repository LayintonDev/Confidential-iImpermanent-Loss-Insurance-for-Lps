{
  "name": "confidential-il-insurance-hook",
  "version": "0.1.0",
  "description": "Uniswap v4 hook providing confidential impermanent loss insurance using Fhenix FHE and EigenLayer AVS",
  "main": "index.js",
  "scripts": {
    "compile": "./scripts/compile.sh",
    "compile:hardhat": "npx hardhat compile",
    "test": "./scripts/test.sh",
    "test:hardhat": "npx hardhat test",
    "test:unit": "npx hardhat test --grep 'Unit Tests'",
    "test:integration": "npx hardhat test --grep 'Integration Tests'",
    "test:coverage": "npx hardhat coverage",
    "node": "npx hardhat node",
    "deploy:local": "npx hardhat run scripts/deploy.ts --network localhost",
    "deploy:sepolia": "npx hardhat run scripts/deploy.ts --network sepolia",
    "verify:sepolia": "npx hardhat verify --network sepolia",
    "lint": "npm run lint:sol && npm run lint:ts",
    "lint:sol": "npx prettier --check 'contracts/**/*.sol'",
    "lint:ts": "npx eslint . --ext .ts",
    "format": "npm run format:sol && npm run format:ts",
    "format:sol": "npx prettier --write 'contracts/**/*.sol'",
    "format:ts": "npx eslint . --ext .ts --fix",
    "start:local": "concurrently \"npm run node\" \"npm run start:fhenix\" \"npm run start:avs\" \"npm run start:indexer\" \"npm run start:frontend\"",
    "start:fhenix": "cd fhenix-service && npm start",
    "start:avs": "cd avs && npm start",
    "start:indexer": "cd scripts && npm run indexer",
    "start:frontend": "cd frontend && npm run dev",
    "build": "npm run compile && cd frontend && npm run build",
    "clean": "npx hardhat clean && rm -rf frontend/.next"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/LayintonDev/Confidential-iImpermanent-Loss-Insurance-for-Lps.git"
  },
  "keywords": [
    "uniswap",
    "v4",
    "hook",
    "defi",
    "insurance",
    "impermanent-loss",
    "fhenix",
    "eigenlayer",
    "confidential-computing",
    "fhe"
  ],
  "author": "LayintonDev",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/LayintonDev/Confidential-iImpermanent-Loss-Insurance-for-Lps/issues"
  },
  "homepage": "https://github.com/LayintonDev/Confidential-iImpermanent-Loss-Insurance-for-Lps#readme",
  "devDependencies": {
    "@nomicfoundation/hardhat-chai-matchers": "^2.0.0",
    "@nomicfoundation/hardhat-ethers": "^3.0.0",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.0",
    "@nomicfoundation/hardhat-toolbox": "^4.0.0",
    "@nomicfoundation/hardhat-verify": "^2.0.0",
    "@typechain/ethers-v6": "^0.5.0",
    "@typechain/hardhat": "^9.0.0",
    "@types/chai": "^4.2.0",
    "@types/mocha": ">=9.1.0",
    "@types/node": ">=16.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "chai": "^4.2.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.45.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "hardhat": "^2.22.0",
    "hardhat-gas-reporter": "^1.0.8",
    "prettier": "^3.0.0",
    "prettier-plugin-solidity": "^1.1.3",
    "solidity-coverage": "^0.8.1",
    "ts-node": ">=8.0.0",
    "typechain": "^8.3.0",
    "typescript": ">=4.5.0"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^5.4.0",
    "dotenv": "^16.3.1",
    "ethers": "^6.8.0",
    "zod": "^3.22.4"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
